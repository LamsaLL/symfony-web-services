{% extends 'base.html.twig' %}

{% block title %}
	Utilisateurs
{% endblock %}

{% block body %}

	<div class="col-8 offset-2">
		<div class="card">
			<div class="card-header">
				<h3>
					<i class="fas fa-users"></i>
					Les Utilisateurs
				</h3>
			</div>

			<div class="card-body">
				<table class="table table-striped table-sm table-hover">
					<thead>
						<tr>
							<th>Id</th>
							<th>Email</th>
							<th>Roles</th>
							<th>Nom</th>
							<th>Prenom</th>
						</tr>
					</thead>
					<tbody>
						{% for user in users %}
							<tr>
								<td>{{ user.id }}</td>
								<td>{{ user.email }}</td>
								<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
								<td>{{ user.name }}</td>
								<td>{{ user.firstName }}</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="7">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>

	<a href="{{ path('user_new') }}">Nouveau</a>
{% endblock %}

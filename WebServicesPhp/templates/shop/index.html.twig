{% extends "base.html.twig" %}
{% block title %}
	Boutique
{% endblock %}
{% block body %}
	<div class="card col-md-12">
		<div class="card-header">
			<h1>
				<i class="fas fa-store"></i>
				{{  'shop.index.backOffice' | trans }}
				{{ nbCategories }}
				cat√©gories
			</h1>
		</div>
		<div class="card-body row">
			{% for category in categories %}
				<div class="col-md-4">
					<div class="card clickable" onclick={{"location='/" ~ app.request.attributes.get('_locale') ~ "/shop/department/" ~ category.id ~ "'"}}>
						<img src={{ asset(category.image) }} class="card-img-top" alt="Fruits">
						<div class="card-body">
							<h4 class="card-title">
								{{  category.name  }}
							</h4>
							<p class="card-text">
								<i>
									{{ category.text }}
								</i>
							</p>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
